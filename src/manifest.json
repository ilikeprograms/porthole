{
  "manifest_version": 2,

  "name": "Waldo",
  "description": "Adwords and related stuff",
  "version": "0.0.3",

  "offline_enabled": true,

  "author": "Thomas Coleman <tomc2k3@googlemail.com>",

  "permissions": [
    "storage",
    "identity",
    "https://*/*",
    "https://www.googleapis.com/"
  ],

  "browser_action": {
    "default_title": "Waldo",
    "default_popup": "index.html"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
